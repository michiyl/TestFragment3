<?xml version="1.0" encoding="utf-8"?>
<TwoLineListItem xmlns:android="http://schemas.android.com/apk/res/android"
                 xmlns:app="http://schemas.android.com/apk/res-auto"
                 xmlns:tools="http://schemas.android.com/tools"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginBottom="2dp"
                 android:layout_marginTop="2dp"
                 android:background="@android:color/background_dark"
                 android:minHeight="?attr/listPreferredItemHeight"
                 android:mode="twoLine">

    <ImageView
        android:id="@+id/twolineBG"
        android:layout_width="wrap_content"
        android:layout_height="192dp"
        android:minHeight="128dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/loadscreen_mp_pipeline"/>

    <TextView
        android:id="@+id/twolineTextViewText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTextMapNameBG"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="twolineTextViewText1"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textColorHighlight="@color/colorAccent"
        android:textSize="14sp"
        tools:typeface="normal"/>

    <TextView
        android:id="@+id/twolineTextViewText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/twolineBG"
        android:layout_alignParentBottom="true"
        android:background="@color/colorTextMapNameBG"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="twolineTextViewText2"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textColorHighlight="@color/colorAccent"
        android:textSize="14sp"
        tools:typeface="normal"/>

</TwoLineListItem>
